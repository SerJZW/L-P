<UserControl x:Class="L_P.View.PodcastView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:L_P.View"
             mc:Ignorable="d" 
             d:Height="1080px" d:Width="1920px" 
            MinWidth="1280px" MinHeight="900px">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Content="Подкасты" Style="{StaticResource LabelStyle}"/>
            <ListView Background="AliceBlue" Margin="108,0,100,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Song"/>
                        <GridViewColumn/>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
